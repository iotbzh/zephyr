/dts-v1/;
#include <arm/renesas/gen4/r8a779a0.dtsi>

/ {
	model = "Renesas Falcon board";
	compatible = "renesas,falcon-cr52";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &scif4; //linux is using scif0
	};

	leds {
		compatible = "gpio-leds";
		user_led: led_1 {
			gpios = <&gpio4 18 GPIO_ACTIVE_HIGH>;
			label = "User LED";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: sw48 {
			gpios = <&gpio6 19 GPIO_ACTIVE_LOW>;
			label = "User switch";
		};
	};

	aliases {
		led0 = &user_led;
		sw0  = &user_button;
	};
};

&scif0 {
	status = "okay";
};

&scif4 {
	status = "okay";
};

&gpio4 {
	status = "okay";
};

&gpio6 {
	status = "okay";
};
